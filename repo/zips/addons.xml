<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="plugin.program.bbvikingwizard" name="bbviking wizard" version="1.0.0" provider-name="bbviking">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">bbviking wizard</summary>
        <description lang="en">Wizard for installing bbviking builds</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/drinfernoo/plugin.program.openwizard/</source>
        <news>
1.0.0
 - Initial version
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon><addon id="repository.bbviking" name="bbviking repository" version="1.0.2" provider-name="bbviking">
    <extension point="xbmc.addon.repository" name="bbviking repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/bbviking/bbviking.github.io/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/bbviking/bbviking.github.io/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/bbviking/bbviking.github.io/master/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>bbviking repository</summary>
        <description>Repository for personal stuff</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
